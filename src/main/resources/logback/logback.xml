<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- 로그파일 저장 경로 -->
  <appender class="ch.qos.logback.core.ConsoleAppender" name="CONSOLE">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>
        %highlight([%-5level]) %cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) : [%thread] %green([%logger:%line]) - %msg%n
      </Pattern>
    </layout>
  </appender>
  <!-- CONSOLE -->
  <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="FILE">
    <file>${LOG_DIR}/application.log</file>
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>
        %highlight([%-5level]) %cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) : %green([%logger:%line]) - %msg%n
      </Pattern>
    </layout>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/application.log.%d{yyyy-MM-dd}</fileNamePattern>
      <maxHistory>10</maxHistory>
    </rollingPolicy>
  </appender>
  <!-- FILE 저장-->
  <logger level="INFO" name="org.hibernate.SQL" />
  <property name="LOG_DIR" value="/Users/inspire12/Documents/logs" />
  <root level="INFO">
    <appender-ref ref="FILE" />
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>